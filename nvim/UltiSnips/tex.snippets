snippet	figure_many "this is to add many figures atonce" b

\begin{figure}[H]
	\centering
		\subfloat[]{\includegraphics[scale=1]{}\label{}}
		\subfloat[]{\includegraphics[scale=1]{}\label{}}
		\\
		\subfloat[]{\includegraphics[scale=1]{}\label{}}
		\subfloat[]{\includegraphics[scale=1]{}\label{}}
	\caption{}
	\label{}
\end{figure}

endsnippet
