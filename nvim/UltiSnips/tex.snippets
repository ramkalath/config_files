snippet code_header_light_theme "this is to add a code header" b
\usepackage[framemethod=TikZ]{mdframed}
\usepackage{listings}
\usepackage{courier}
\definecolor{backgroundgray}{rgb}{0.9, 0.9, 0.9} % background
\definecolor{black}{rgb}{0,0,0} % border around code
\definecolor{textgray}{rgb}{0.7,0.7,0.7} % basic text
\definecolor{commentgray}{rgb}{0.4,0.4,0.4} % basic text
\definecolor{stringgreen}{rgb}{0,0.6,0} % string
\definecolor{keywordorange}{rgb}{0.9,0.5,0} % keywords
\definecolor{mypurple}{rgb}{0.3,0.2,0.9} % keywords

\lstset{frame=tb,
  language=c++,
  aboveskip=3mm,
  belowskip=3mm,
  showstringspaces=false,
  columns=flexible,
  basicstyle={\small\ttfamily},
  numbers=none,
  numberstyle=\tiny\color{textgray},
  commentstyle=\itshape\color{commentgray},
  morecomment=[l][\color{mypurple}]{\#},
  stringstyle=\color{stringgreen},
  keywordstyle=\color{keywordorange},
  frame=single,	                   % adds a frame around the code
  escapeinside={<@}{@>},
  keepspaces=true,
  breaklines=true,
  breakatwhitespace=true,
  tabsize=3
}
endsnippet
