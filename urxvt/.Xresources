#define size 15
!#define myfont UbuntuMono
#define myfont Inconsolata

URxvt*font: xft:myfont:pixelsize=size:antialias=true
URxvt*boldFont: xft:myfont:bold:pixelsize=size:antialias=true:style=Bold
URxvt*imFont: xft:myfont:pixelsize=17:antialias=true
URxvt*italicFont: xft:myfont:italic:pixelsize=size:antialias=true:style=Oblique
URxvt*boldItalicFont: xft:myfont:bold:italic:pixelsize=size:antialias=true:style=Bold Oblique


URxvt.scrollBar: false
URxvt*cursorColor: #00FF00
URxvt*borderLess: true
URxvt*internalBorder: 0
URxvt*externalBorder: 0
URxvt.iso14755: false
URxvt.iso14755_52: false
!URxvt.transparent: true
!URxvt.shading: 20

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

URxvt*urlLauncher: /usr/bin/firefox
URxvt.iconFile: /usr/share/icons/Humanity/apps/128/gnome-terminal.svg

! Fullscreen switch
URxvt.perl-ext-common: fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

