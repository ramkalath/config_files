#define size 13
!URxvt*font: xft:Inconsolata:pixelsize=size:antialias=true
!URxvt*boldFont: xft:Inconsolata:bold:pixelsize=size:antialias=true
!!URxvt*imFont: xft:Inconsolata\ for\ Powerline:pixelsize=17:antialias=true
!URxvt*italicFont: xft:Inconsolata:italic:pixelsize=size:antialias=true
!URxvt*boldItalicFont: xft:Inconsolata:bold:italic:pixelsize=size:antialias=true
URxvt.font:xft:Monospace:pixelsize=size
URxvt*italicFont: xft:Monospace:italic:pixelsize=size:antialias=true
URxvt.boldfont:xft:Monospace-Bold:pixelsize=size

URxvt.scrollBar: false
URxvt*cursorColor: #00FF00
URxvt*borderLess: false
URxvt*internalBorder: 0
URxvt*externalBorder: 0
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt*urlLauncher: /usr/bin/firefox
URxvt.iconFile: /usr/share/icons/Humanity/apps/128/gnome-terminal.svg

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! Fullscreen switch
URxvt.perl-ext-common: fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

